<%= form_for @post do |f| %>
  <%= render "posts/shared/error_messages" %>

  <div class="field">
    <%= f.label :title %><br />
    <%= f.text_field :title, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :description %><br />
    <%= f.text_field :description, autofocus: true %>
  </div>

  <div class="actions">
    <%= f.submit "Submit" %>
  </div>
  <%= link_to 'Delete', post_path(@post), method: :delete, data: {confirm: "Are you sure?"}  %>
<% end %>