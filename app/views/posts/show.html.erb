<table BORDER>
  <thead>
    <tr> 
      <th>TITLE</th><th>DESCRIPTION</th><th>USER_ID</th><th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td><%= @post.title %></td>
      <td><%= @post.description %></td>
      <td><%= @post.user_id %></td>
      <td>
        <%= link_to "Edit post", edit_post_path(@post)%> 
        <%= link_to 'Delete', post_path(@post), method: :delete, data: {confirm: "Are you sure?"} %>
      </td>
    </tr>
  </tbody>
</table>
<% if user_signed_in? %>
    <% if @post.liked?(current_user) %>
      <%= button_to "Unlike", like_path(@post), method: "delete" %>
    <% else %>
      <%= button_to "Like", like_path(@post), method: "put" %>
    <% end %>
  <% end %>